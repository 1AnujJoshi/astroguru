<link rel="stylesheet" type="text/css" href="css/style.css" />

<h1 style="text-align: center; margin: 2rem" class="h1">AstroGuru</h1>

<form
  class="w-50 m-auto p-3 mt-5 border border-light border-3"
  action="/getData"
  method="POST"
>
  <h3 style="text-align: center; margin: 2rem">Enter Your Details</h3>
  <div class="row mb-2 mx-auto">
    <label for="date" class="col-sm-6 mt-2 col-form-label h1"
      ><h5>Date and Time of Birth</h5></label
    >
    <div class="col-sm-6 mt-2 mx-auto">
      <input
        type="datetime-local"
        name="date"
        required
        class="form-control"
        id="date"
      />
    </div>
  </div>

  <div class="row mb-2 mx-auto">
    <label for="lat" class="col-sm-6 mt-2 col-form-label h1"
      ><h5>Latitude</h5></label
    >
    <div class="col-sm-6 mt-2 mx-auto">
      <input
        type="text"
        name="lat"
        value="18.975"
        required
        class="form-control"
        id="lat"
      />
    </div>
  </div>
  <div class="row mb-2 mx-auto">
    <label for="lon" class="col-sm-6 mt-2 col-form-label h1"
      ><h5>Longitude</h5></label
    >
    <div class="col-sm-6 mt-2 mx-auto">
      <input
        type="text"
        name="lon"
        value="72.8258"
        required
        class="form-control"
        id="lon"
      />
    </div>
  </div>
  <div class="row mb-2 mx-auto">
    <label for="zone" class="col-sm-6 mt-2 col-form-label h1"
      ><h5>Time Zone</h5></label
    >
    <div class="col-sm-6 mt-2 mx-auto">
      <input
        type="text"
        name="zone"
        placeholder="Timezone"
        value="5.5"
        required
        class="form-control"
        id="zone"
      />
    </div>
  </div>

  <div class="d-flex justify-content-between">
    <div class="mt-4 fs-4 border-top text-center border-info p-2 mx-auto">
      <button type="submit" class="btn btn-primary">
        Watch Your Horoscope
      </button>
    </div>
  </div>
</form>
